{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Products List{% endblock %}

{% block body %}
<div class="container mt-4">
<h1> Products List </h1>
{% if articles %}
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">titre</th>
      <th scope="col">contenu</th>
      <th scope="col">date</th>
      
     
    </tr>
  </thead>
  <tbody>
    {% for p in articles %}
        <tr>
            <td> {{ p.id }} </td>
            <td> {{ p.titre }} </td>
            <td> {{ p.contenu }} </td>
            <td> {{ p.date }} </td>
            
        </tr>
    {% endfor %}
  </tbody>
</table>
{% else %}
<h2>No Records</h2>
{% endif %}
</div>
{% endblock %}
